{
  "name": "zenblock-tray",
  "version": "1.0.0",
  "description": "ZenBlock System Tray Application",
  "main": "tray-app.js",
  "scripts": {
    "tray": "electron tray-app.js",
    "build-tray": "electron-builder"
  },
  "build": {
    "appId": "com.zenblock.tray",
    "productName": "ZenBlock",
    "files": [
      "tray-app.js",
      "tray-icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "tray-icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "tray-icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "tray-icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "optionalDependencies": {
    "node-window-manager": "^2.2.4"
  }
}
